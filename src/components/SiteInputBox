import React, { useState } from 'react';
import { AutoComplete } from 'primereact/autocomplete';

const SiteInputBox = () => {
  const [site, setSite] = useState('');
  const [filteredSites, setFilteredSites] = useState<string[]>([]);

  const siteList = ['4BGS014A', '5TC0614A', '5TC0702A', '7NYR098B', '8LKA123A'];

  const searchSite = (event: { query: string }) => {
    const results = siteList.filter(site =>
      site.toLowerCase().includes(event.query.toLowerCase())
    );
    setFilteredSites(results);
  };

  return (
    <div>
      <label htmlFor="site">Enter Site Name:</label>
      <AutoComplete
        inputId="site"
        value={site}
        suggestions={filteredSites}
        completeMethod={searchSite}
        onChange={(e) => setSite(e.value)}
        placeholder="Type site name..."
      />
    </div>
  );
};

export default SiteInputBox;
